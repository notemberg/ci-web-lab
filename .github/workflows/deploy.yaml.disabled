name: Deploy Full Stack

on:
  push:
    branches: [ main ]

jobs:
  deploy:
    runs-on: self-hosted

    steps:
      - uses: actions/checkout@v4

      - name: Build & Deploy
        run: |
          docker compose build
          docker compose up -d

      - name: Health check
        run: |
          curl -f http://localhost:4000/api/health
          curl -f http://localhost:80/